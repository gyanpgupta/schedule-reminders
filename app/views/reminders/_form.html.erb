<%= form_with(model: reminder, local: true) do |form| %>
  <% if reminder.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reminder.errors.count, "error") %> prohibited this reminder from being saved:</h2>
      <ul>
      <% reminder.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <div class="col-md-6">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-6">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-6">
      <%= form.collection_radio_buttons :month_direction, [['start_of_month', 'Start of Month'] ,['end_of_month', 'End of month']], :first, :last , style: "display:inline", default: true %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-6">
      <%= form.label :month_day %>
      <%= form.select(:month_day, days_for_select, {}, {class: 'form-control'}) %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-6">
      <%= form.label :time %>
      <%= form.text_field :time, value: (@reminder.time.present? ? @reminder.time.strftime("%H:%M %p") : form.object.time ), class: 'form-control timepicker' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
<br/>
